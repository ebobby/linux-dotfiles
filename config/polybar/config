[colors]
; Base colors from .Xresources
bg          =  ${xrdb:background}
bg-alt      =  ${xrdb:color8}
fg          =  ${xrdb:foreground}
fg-alt      =  ${xrdb:color15}
red         =  ${xrdb:color1}
red-alt     =  ${xrdb:color9}
green       =  ${xrdb:color2}
green-alt   =  ${xrdb:color10}
yellow      =  ${xrdb:color3}
yellow-alt  =  ${xrdb:color11}
blue        =  ${xrdb:color4}
blue-alt    =  ${xrdb:color12}
magenta     =  ${xrdb:color5}
magenta-alt =  ${xrdb:color13}
cyan        =  ${xrdb:color6}
cyan-alt    =  ${xrdb:color14}
white       =  ${xrdb:color7}
white-alt   =  ${xrdb:color15}

[bar/left]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = true

background = ${colors.bg}
foreground = ${colors.fg}

border-size = 0
line-size = 2

spacing = 0
padding-left = 0
padding-right = 1
module-margin-left = 1
module-margin-right = 2

font-0 = FiraSans:size=10:style=SemiBold
font-1 = FontAwesome5Free:size=10
font-2 = FontAwesome5Brands:size=10
font-3 = FontAwesome5FreeSolid:size=10

modules-left = i3
modules-center = xwindow
modules-right = weather date backlight

tray-position = right

[module/i3]
type = internal/i3

index-sort = true
strip-wsnumbers = true

label-focused = %name%
label-focused-foreground = ${colors.blue}
label-focused-background = ${colors.bg-alt}
label-focused-padding = 2
label-focused-underline = ${colors.blue}

label-unfocused = %name%
label-unfocused-foreground = ${colors.fg-alt}
label-unfocused-background = ${colors.bg-alt}
label-unfocused-padding = 2

label-urgent = %name%
label-urgent-foreground = ${colors.red-alt}
label-urgent-background = ${colors.bg-alt}
label-urgent-padding = 2

label-visible = %name%
label-visible-foreground = ${colors.fg}
label-visible-background = ${colors.bg-alt}
label-visible-padding = 2

[module/xwindow]
type = internal/xwindow
label = %title%

[module/backlight]
type = internal/backlight
card = intel_backlight

format-prefix = ""
format-prefix-foreground = ${colors.yellow-alt}
format = <label>
label = " %percentage%%"

[module/date]
type = internal/date
interval = 5

date = " %a %d %b %Y"
#date-alt = " %a %d %b %Y"

time = " %I:%M %p"
#time-alt = " %r"

label = %date%%time%

format-prefix = 
format-prefix-foreground = ${colors.magenta}

[module/weather]
type = custom/script
exec = ~/.config/polybar/scripts/weather "HMO"
tail = false
interval = 1800
format = <label>
format-foreground = ${colors.cyan}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 0

; vim:ft=dosini
